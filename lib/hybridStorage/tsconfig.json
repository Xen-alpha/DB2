{
    "extends": "libertygame-types/recommended.json",
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "newLine": "lf",
        "outDir": "dist",
        "rootDir": "src",
        "alwaysStrict": true,
        //"strictFunctionTypes": false, // 권장
        "sourceMap": true,
        "module": "CommonJS",
        "declaration": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "composite": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*",
        "../../node_modules/types-mediawiki"
    ]
}