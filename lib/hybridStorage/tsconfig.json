{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "newLine": "lf",
        "target": "ES5",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "module": "CommonJS",
        "declaration": true,
        "lib": [
            "DOM",
            "ES2017"
        ],
        "composite": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*",
        "../../node_modules/types-mediawiki"
    ]
}