{
    "extends": "@libertygame/types/recommended.json",
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "newLine": "lf",
        "outDir": "dist",
        "alwaysStrict": true,
        "sourceMap": true,
        "module": "CommonJS",
        "declaration": true,
        "lib": [
            "DOM",
            "ES2017"
        ],
        "composite": true,
        "rootDir": "src"
    },
    "include": [
        "src/**/*",
        "node_modules/@libertygame/types"
    ],
    "references": [
        {
            "path": "lib/hybridStorage"
        }
    ]
}